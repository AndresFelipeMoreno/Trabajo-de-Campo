<div class="container p-4">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Agregar Producto</h3></div>
        <div class="card-body">
          <section class="hero is-success is-fullheight">
            <div class="hero-body">
              <div class="container has-text-center">
                <div class="column is-4 is-offset-4">
                  <p class="subtitle has-text-grey">Agrega los datos del producto que desees.</p>
                  <div class="box">
                    <figure class="avatar">
                      <img
                        src="/img/imagen.png" alt="Logo Marketplace" width="250" height="220"/>
                    </figure>
                    <form action="/seeds/addseed" method="POST">
                      <div class="form-group">
                        <input type="text" name="name" placeholder="Nombre Semilla" class="form-control" autofocus required>
                      </div>

                      <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripcion del producto"></textarea>
                      </div>

                      <div class="form-group">
                        <input type="text" name="quantityAvailable" placeholder="Cantidad disponible del producto(Kg)" class="form-control" pattern="^[0-9,$]*$" required oninvalid="setCustomValidity('Solo valores numericos')" oninput="setCustomValidity('')">
                      </div>

                      <div class="form-group">
                        <input type="text" name="priceKg" placeholder="Ingrese el precio por Kg del producto" class="form-control" pattern="^[0-9,$]*$" required oninvalid="setCustomValidity('Solo valores numericos')" oninput="setCustomValidity('')">
                      </div>

                      <div class="form-group">
                        <input type="text" name="cultivationTown" placeholder="Lugar de cultivacion" class="form-control" required >
                      </div>

                    <div class="form-group">
                        <button class="btn btn-success btn-block">
                          Agregar Producto
                        </button>
                      </form>
                    </div>
                    </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>
